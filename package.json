{
  "name": "server",
  "version": "0.1.1",
  "description": "The web server of the game.",
  "repository": {
    "type": "git",
    "url": "https://github.com/achtungonline/server.git"
  },
  "author": [
    {
      "name": "Lucas Wiener",
      "email": "lucas@wiener.se"
    },
    {
      "name": "Mathias Lindblom",
      "email": "ommatte@gmail.com"
    },
    {
      "name": "Erik Odenman",
      "email": "erik.odenman@gmail.com"
    }
  ],
  "bugs": {
    "url": "https://github.com/achtungonline/server/issues"
  },
  "homepage": "https://github.com/achtungonline/server",
  "scripts": {
    "clean": "shx rm -rf build",
    "prebuild": "npm run clean && shx mkdir build",
    "build": "browserify src/server.js -o build/server.js --node",
    "build-dev": "cross-env NODE_ENV=development npm run build",
    "build-test": "browserify src/server-test.js -o build/server-test.js --node",
    "start": "node build/server.js",
    "start-test": "node build/server-test.js"
  },
  "dependencies": {
    "bufferutil": "^1.2.1",
    "core": "achtungonline/core",
    "socket.io": "^1.4.8",
    "utf-8-validate": "^1.2.1"
  },
  "devDependencies": {
    "babel-preset-es2015": "^6.14.0",
    "babelify": "^7.3.0",
    "browserify": "^13.1.0",
    "cross-env": "^3.0.0",
    "envify": "^3.4.1",
    "shx": "^0.1.4"
  },
  "babel": {
    "presets": [
      "es2015"
    ]
  },
  "browserify": {
    "transform": [
      "babelify",
      ["envify", {"_": "purge"}]
    ]
  }
}
